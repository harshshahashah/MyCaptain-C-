#include <iostream>
using namespace std;
main()
{
    int n;
    cout << "Enter the no. of elements : ";
    cin >> n;
    int arr[n];
    cout << "Give input for array elements :" << endl;
    for(int i = 0; i < n; i++)
    {
        cout << "Enter " << (i+1) << "th element : ";
        cin >> arr[i];
    }
    int *p;
    p = arr;
    cout << "You entered : ";
    for(int i = 0; i < n; i++)
    {
        cout << *p << " ";
        p++;
    }
}
